<?xml version="1.0"?>
<config>
    <modules>
        <KJ_MageSplit>
            <version>1.0.0</version>
        </KJ_MageSplit>
    </modules>

    <global>
        <events>
            <sales_order_place_after>
                <observers>
                    <magesplit_sales_order_place_after>
                        <class>KJ_MageSplit_Model_Observer</class>
                        <method>salesOrderPlaceAfter</method>
                    </magesplit_sales_order_place_after>
                </observers>
            </sales_order_place_after>
        </events>
    </global>

    <frontend>
        <layout>
            <updates>
                <magesplit>
                    <file>kj_magesplit.xml</file>
                </magesplit>
            </updates>
        </layout>
    </frontend>
</config>